  gem 'sass-rails',     '~> 3.2.0'
  gem 'bootstrap-sass', '~> 2.2.1.0'

  gem 'uglifier', '>= 1.0.3'
end

gem 'jquery-rails', '~> 2.1.0'

gem 'friendly_id', '~> 4.0.0'
